    <xs:element name="GetSupplierCatalogRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierCode" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetSupplierCatalogResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="product" type="tns:SupplierProduct" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetInventoryByProductRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierProductRef" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetInventoryByProductResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="inventory" type="tns:Inventory" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetInventoryBulkRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierCode" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetInventoryBulkResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="inventory" type="tns:Inventory" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="UpdateStockRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierProductRef" type="xs:string" />
                <xs:element name="newStock" type="xs:int" />
                <xs:element name="reason" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="UpdateStockResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="status" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetLowStockProductsRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierCode" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetLowStockProductsResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="inventory" type="tns:Inventory" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetSupplierSummaryRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierCode" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="GetSupplierSummaryResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="summary" type="tns:SupplierSummary" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="DeactivateSupplierProductRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="supplierProductRef" type="xs:string" />
                <xs:element name="reason" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="DeactivateSupplierProductResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="status" type="xs:string" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>