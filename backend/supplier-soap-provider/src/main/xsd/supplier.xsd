<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://supplier.com/schema"
    xmlns:tns="http://supplier.com/schema"
    elementFormDefault="qualified">

    <!-- COMMON TYPES -->
    <xs:complexType name="SupplierProduct">
        <xs:sequence>
            <xs:element name="supplierProductRef" type="xs:string" />
            <xs:element name="name" type="xs:string" />
            <xs:element name="description" type="xs:string" minOccurs="0" />
            <xs:element name="status" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Inventory">
        <xs:sequence>
            <xs:element name="supplierProductRef" type="xs:string" />
            <xs:element name="stock" type="xs:int" />
            <xs:element name="lowStockThreshold" type="xs:int" />
            <xs:element name="lastUpdatedAt" type="xs:dateTime" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="SupplierSummary">
        <xs:sequence>
            <xs:element name="totalProducts" type="xs:int" />
            <xs:element name="lowStockCount" type="xs:int" />
            <xs:element name="lastInventorySync" type="xs:dateTime" />
        </xs:sequence>
    </xs:complexType>

